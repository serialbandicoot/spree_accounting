<%= form_for(@admin_bank_transaction) do |f| %>
  <% if @admin_bank_transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_bank_transaction.errors.count, "error") %> prohibited this admin_bank_transaction from being saved:</h2>

      <ul>
      <% @admin_bank_transaction.errors.full_messages.each do |msg| %>
