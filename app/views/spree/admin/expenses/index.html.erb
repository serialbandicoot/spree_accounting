<%= render 'spree/admin/shared/accounts_accordion' %>

<div id="acc_content">

    <table class="index">
      <tr>
        <th>Expense categories</th>
        <th>Expense type</th>
        <th>Expense date</th>
        <th>Expense total value</th>
        <th>Vat value</th>
        <th>Expense description</th>
        <th>Expense receipt</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @admin_expenses.each do |admin_expense| %>
      <tr>
        <td><%= Admin::ExpenseCategory.find_by_id(admin_expense.expense_categories_id).expense_category %></td>
        <td><%= Admin::ExpenseType.find_by_id(admin_expense.expense_type_id).expense_type %></td>
        <td><%= admin_expense.expense_date %></td>
        <td><%= admin_expense.expense_total_value %></td>
        <td><%= Admin::Vat.find_by_id(admin_expense.vat_value_id).vat_value %></td>
        <td><%= admin_expense.expense_description %></td>
        <td><%= admin_expense.expense_receipt %></td>
        <td><%= link_to 'Show', admin_expense %></td>
        <td><%= link_to 'Edit', edit_admin_expense_path(admin_expense) %></td>
        <td><%= link_to 'Destroy', admin_expense, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Expense', new_admin_expense_path %>

</div>
